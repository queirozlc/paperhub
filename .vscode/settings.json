{
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always",
      "source.removeUnusedImports": "always",
    }
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "rubyLsp.formatter": "rubocop",
  "rubyLsp.linters": [
    "rubocop"
  ]
}